<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NothingTeam" parent="XUITheme.Phone">
        <!-- 自定义自己的主题样式 -->
        <!--标题栏的配色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--顶部状态栏配色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--光标、按钮等配色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 自定义主题样式 -->
    <style name="XUITheme" parent="XUIBaseTheme">

        <item name="xui_actionbar_color">@color/colorPrimary</item>
        <item name="xui_actionbar_text_color">@color/xui_config_color_primary_text</item>
        <item name="xui_actionbar_immersive">true</item>

        <!--自定义标题栏样式方法2-->
        <item name="TitleBarStyle">@style/NothingTeam</item>
    </style>

    <!--home也标签布局-->
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/xui_config_color_gray_6</item>
    </style>
    <!--TabLayout-->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@drawable/selector_homepage_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_content_text</item>
    </style>


    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="titleTextColor">@color/xui_config_color_white</item>
        <item name="subtitleTextColor">@color/xui_config_color_white</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  我的页面——菜单栏——列表选项样式  -->
    <style name="Account">
        <item name="sLeftViewWidth">90dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">25dp</item>
        <item name="sRightTextSize">?attr/xui_config_size_content_text</item>
        <item name="sRightViewMarginRight">10dp</item>
        <item name="sRightIconRes">@drawable/ic_go_black</item>
    </style>
</resources>
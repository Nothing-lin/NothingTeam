<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <!--  信息的发送事件  -->
    <TextView
        android:id="@+id/tv_chat_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2017/1/1 00:00:00"
        android:textColor="#bbbbbb"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!--      信息的主题消息内容      -->
            <FrameLayout
                android:id="@+id/fl_chat_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/chat_text_bg_default"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_chat_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_chat_item_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_chat_item_img2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <!--用户头像-->
            <ImageView
                android:id="@+id/img_chat_item_user"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
